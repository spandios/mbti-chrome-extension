{
  "manifest_version": 3,
  "name": "모두의 MBTI",
  "description": "모두의 MBTI 크롬 확장 프로그램",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "images/mbti-logo-16.png"
  },
  "window": {
    "width": 400,
    "height": 600
  },
  "icons": {
    "16": "images/mbti-logo-16.png",
    "32": "images/mbti-logo-32.png",
    "48": "images/mbti-logo-48.png",
    "128": "images/mbti-logo.png"
  },
  "permissions": ["identity", "identity.email", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
